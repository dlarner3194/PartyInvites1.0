@model PartyInvites.Models.GuestResponse    
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>RsvpForm</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="RsvpForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name">Your Name:</label>
                    <input class="form-control" name="name" value="" asp-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Your Email:</label>
                    <input class="form-control"type="email" name="email" value="" asp-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Your Phone:</label>
                    <input class="form-control" name="phone" value="" asp-for="Phone" />
                </div>
                <div class="form-group">
                    <label>Will you attend?</label>
                    <select class="form-control" asp-for="WillAttend">
                        <option value="">Choose and option</option>
                        <option value="true">Yes, I'll be there</option>
                        <option value="false">No, I can't</option>
                    </select>
                </div>
                <button class="btn btn-primary" type="submit">Submit RSVP</button>
            </form>
        </div>
    </div>
</body>
</html>
